{
  "name": "rek",
  "version": "0.8.1",
  "description": "Wrapper around the Fetch API",
  "type": "module",
  "main": "./dist/node.cjs",
  "exports": {
    ".": [
      {
        "import": "./dist/native.js",
        "require": "./dist/native.cjs"
      }
    ],
    "./node": [
      {
        "import": "./dist/node.js",
        "require": "./dist/node.cjs"
      }
    ],
    "./iso": [
      {
        "browser": {
          "import": "./dist/native.js",
          "require": "./dist/native.cjs"
        },
        "node": {
          "import": "./dist/node.js",
          "require": "./dist/node.cjs"
        }
      }
    ],
    "./error": "./dist/error.cjs",
    "./factory": "./dist/factory.cjs"
  },
  "module": "./dist/native.js",
  "unpkg": "./dist/rek.umd.min.js",
  "types": "./dist/native.d.ts",
  "typesVersions": {
    "*": {
      "dist/native.d.ts": [
        "./dist/native.d.ts"
      ],
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:rollup && npm run build:types",
    "build:cjs": "BABEL_ENV=cjs babel src -s --out-file-extension .cjs --out-dir dist",
    "build:esm": "BABEL_ENV=esm babel src/{native,node}.js -s --out-dir dist",
    "build:rollup": "rollup -c",
    "build:types": "tsc",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "lint": "eslint --ext .cjs --ext .js --ext .mjs --ext .ts .",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build",
    "preversion": "npm run lint",
    "test": "tape tests/*"
  },
  "lint-staged": {
    "*.{cjs,js,mjs,ts}": "eslint --cache --fix",
    "*.{cjs,js,json,mjs,ts}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lohfu/rek.git"
  },
  "keywords": [
    "ajax",
    "curl",
    "fetch",
    "fetching",
    "http",
    "https",
    "node-fetch",
    "request",
    "requests",
    "wget",
    "xhr"
  ],
  "author": "Linus Miller <lohfu@lohfu.io> (https://lohfu.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lohfu/rek/issues"
  },
  "homepage": "https://github.com/lohfu/rek#readme",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-es2015-modules-simple-commonjs": "^0.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rollup": "^4.3.0",
    "rollup-plugin-uglify": "^6.0.4",
    "sinon": "^17.0.1",
    "tape": "^5.7.2",
    "typescript": "^5.2.2"
  }
}
