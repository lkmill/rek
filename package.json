{
  "name": "rek",
  "version": "0.3.8",
  "description": "Wrapper around the Fetch API",
  "main": "node/index",
  "browser": "browser/index",
  "scripts": {
    "clean": "rimraf browser dist node",
    "lint": "eslint src",
    "build": "npm run build:cjs && npm run build:esm && npm run build:node && npm run build:umd && npm run build:umd:min",
    "build:cjs": "BABEL_ENV=cjs babel src --out-dir browser",
    "build:esm": "BABEL_ENV=esm babel src --keep-file-extension --out-dir browser",
    "build:node": "BABEL_ENV=node babel src --out-dir node",
    "build:umd": "mkdir -p dist && BABEL_ENV=umd rollup -c -o dist/rek.js",
    "build:umd:min": "mkdir -p dist && BABEL_ENV=umd rollup -c | uglifyjs -c -m > dist/rek.min.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run clean && npm run lint && npm run build",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lohfu/rek.git"
  },
  "author": "Linus Miller <lohfu@lohfu.io> (https://lohfu.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lohfu/rek/issues"
  },
  "homepage": "https://github.com/lohfu/rek#readme",
  "dependencies": {
    "lowline": "^0.2.0"
  },
  "optionalDependencies": {
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "babel-plugin-add-module-exports": "^0.2.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "require-relative": "^0.8.7",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
