{
  "name": "rek",
  "version": "0.3.9",
  "description": "Wrapper around the Fetch API",
  "main": "node/index",
  "browser": "browser/index",
  "scripts": {
    "clean": "rimraf browser dist node",
    "lint": "eslint src --ext mjs",
    "build": "npm run build:cjs && npm run build:esm && npm run build:node:cjs && npm run build:node:esm && npm run build:umd && npm run build:umd:min",
    "build:cjs": "BABEL_ENV=cjs babel src --out-dir browser",
    "build:esm": "BABEL_ENV=esm babel src --keep-file-extension --out-dir browser",
    "build:node:cjs": "BABEL_ENV=node:cjs babel src --out-dir node",
    "build:node:esm": "BABEL_ENV=node:esm babel src --keep-file-extension --out-dir node",
    "build:umd": "mkdir -p dist && BABEL_ENV=umd rollup -c -o dist/rek.js",
    "build:umd:min": "mkdir -p dist && BABEL_ENV=umd rollup -c | uglifyjs -c -m > dist/rek.min.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run clean && npm run lint && npm run build",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lohfu/rek.git"
  },
  "author": "Linus Miller <lohfu@lohfu.io> (https://lohfu.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lohfu/rek/issues"
  },
  "homepage": "https://github.com/lohfu/rek#readme",
  "dependencies": {},
  "optionalDependencies": {
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.2.3",
    "uglify-js": "^3.5.6"
  }
}
